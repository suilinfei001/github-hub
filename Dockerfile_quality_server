FROM golang:1.24-alpine AS builder
WORKDIR /app
COPY go.mod ./
# No external deps for now; keep step for future modules
RUN --mount=type=cache,target=/go/pkg/mod go mod download || true
COPY . .
RUN --mount=type=cache,target=/go/pkg/mod \
    CGO_ENABLED=0 GOOS=linux go build -trimpath -ldflags="-s -w" -o /out/quality-server ./cmd/quality-server

FROM alpine:3.19
RUN apk add --no-cache ca-certificates tzdata git \
 && addgroup -S app && adduser -S -G app app
WORKDIR /app
COPY --from=builder /out/quality-server /app/
COPY --from=builder /app/internal/quality/data /usr/local/share/quality-data
RUN chmod +x /app/quality-server && \
    mkdir -p /data && chown -R app:app /data /app
USER app
EXPOSE 5001
VOLUME ["/data"]
ENV GITHUB_TOKEN=""
CMD ["/app/quality-server", "-addr", ":5001"]